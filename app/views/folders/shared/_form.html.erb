<%

folder ||= Folder.new
turbo_frame_key ||= nil

path ||= folder.persisted? ? folders_edit_action_path(folder) : folders_create_action_path

%>

<%= render 'shared/form-errors', item: folder %>

<%= form_tag path, class: 'row', data: { controller: 'form-loading' } do %>
  <% if turbo_frame_key %>
    <input type="hidden" name="turbo_frame_key" value="<%= turbo_frame_key %>">
  <% end %>

  <div class="col col-12 mb-3">
    <label for="name" class="form-label">Nome</label>
    <input type="text" class="form-control" id="name" name="name" value="<%= folder.name %>" required>
  </div>

  <div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-primary btn-form-submit" data-form-loading-target="submit">Conferma</button>
  </div>
<% end %>
