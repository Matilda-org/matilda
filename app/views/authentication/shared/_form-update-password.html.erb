<%= form_tag authentication_update_password_action_path(user), class: 'row', data: { turbo_frame: 'false', controller: 'form-loading' } do %>

  <div class="col col-12 mb-3">
    <label for="code" class="form-label">Codice ricevuto via email</label>
    <input type="text" class="form-control" id="code" name="code" value="" required>
  </div>

  <div class="col col-12 mb-3">
    <label for="password" class="form-label">Nuova password</label>
    <input type="password" class="form-control" id="password" name="password" value="" required>
  </div>

  <div class="col col-12 mb-3">
    <label for="password_confirmation" class="form-label">Conferma nuova password</label>
    <input type="password" class="form-control" id="password_confirmation" name="password_confirmation" value="" required>
  </div>

  <div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-primary btn-form-submit" data-form-loading-target="submit">Conferma</button>
  </div>
<% end %>