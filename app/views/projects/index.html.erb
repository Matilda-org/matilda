<%= render 'shared/page-header', title: 'Progetti', subtitle: @folder && "<a class=\"text-primary\" href='#{folders_show_path(@folder)}' data-turbo='false'>#{@folder&.name}</a>", render_actions: 'projects/index-actions' %>

<%= render 'shared/page-preferred',
    query: @projects_preferred,
    type: 'Project',
    render_item: 'projects/shared/card-interactive',
    render_item_param: :project
  %>

<%= render 'shared/page-index',
  query: @projects,
  render_item: 'projects/shared/card-interactive',
  render_item_param: :project,
  search: true,
  filters: [
    { label: 'Attivi', value: 'not-archived', default: true },
    { label: 'Archiviati', value: 'archived' }
  ],
  sorts: [
    { label: 'Nome ASC', value: 'name_asc', default: true },
    { label: 'Nome DESC', value: 'name_desc' },
    { label: 'Anno ASC', value: 'year_asc' },
    { label: 'Anno DESC', value: 'year_desc' }
  ]
%>