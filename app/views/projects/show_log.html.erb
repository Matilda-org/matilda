<div class="card mt-3 mb-3">
  <div class="card-header border-light bg-light text-muted d-flex justify-content-between align-items-center">
    <div class="me-3">
      <%= @log.project.complete_code_name %>
    </div>
    <a href="<%= projects_show_log_path(@log, share_code: params[:share_code], print: true) %>" class="btn btn-primary btn-sm">
      <i class="bi bi-printer"></i>
    </a>
  </div>
  <div class="card-body">
    <div>
      <h2 class="fs-2"><%= @log.title %></h2>
      <p class="text-muted"><%= render 'users/shared/preview', user_id: @log.user_id %> - <%= @log.date.strftime('%d/%m/%Y') %></p>
    </div>

    <hr />

    <%= render 'projects/shared/log-content', log: @log %>
  </div>
</div>